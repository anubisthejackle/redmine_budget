<ul>
  <% if @deliverable %>
  <li>
    <%= context_menu_link l(:button_edit), edit_deliverable_path(@deliverable),
        class: 'icon icon-edit' %>
  </li>
  <li>
    <%= context_menu_link l(:button_copy), copy_deliverable_path(@deliverable),
        class: 'icon icon-copy' %>
  </li>
  <% end %>
  <li>
    <%= context_menu_link l(:button_delete),
        deliverables_path(ids: @deliverables.map(&:id)),
        class: 'icon icon-del', method: :delete,
        data: { confirm: l(:text_are_you_sure) } %>
  </li>
</ul>
